		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/html2pdf.js": "^0.10.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	},
	"dependencies": {
		"@better-auth/cli": "^1.3.34",
		"@tailwindcss/vite": "^4.1.4",
		"better-auth": "^1.3.34",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.7",
		"drizzle-orm": "^0.44.7",
		"html2pdf.js": "^0.10.3",
		"idb-keyval": "^6.2.1",
		"svelte-i18n": "^4.0.1",
		"tailwindcss": "^4.1.4",
		"uuid": "^11.1.0"
	}
